<script>
    (function ($) {
        function getUnAvailableDate() {
            $.ajax({
                url: "http://nhom05booking.herokuapp.com/room/info?roomId={{room._id}}",
                method: "GET",

                success: data => {
                    var unavailableDates = [];
                    console.log(data);
                    var book = data.room.status.bookTime
                    for (var i = 0; i < book.length; i++) {

                        var start = new Date(Number(book[i].startDate));
                        var startDateStr = start.getFullYear() + "-" + Number(start.getMonth() + 1).toString() + '-' + Number(start.getDate() + 1).toString();
                        var end = new Date(Number(book[i].endDate));
                        var endDateStr = end.getFullYear() + "-" + Number(end.getMonth() + 1).toString() + '-' + Number(end.getDate() + 1).toString();
                        if (book[i].startDate < book[i].endDate) {
                            unavailableDates.push({ start: startDateStr, end: endDateStr })
                        }
                        console.log(unavailableDates);

                    }
                    $('#awdhj').availabilityCalendar(unavailableDates);
                }
            });
        }

        getUnAvailableDate();

    })(jQuery)





</script>

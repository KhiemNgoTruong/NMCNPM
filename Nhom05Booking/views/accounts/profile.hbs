	<section class="section-checkout">
		<div class="container">
			<div class="checkout">



				<div class="row">

					<div class="col-md-12">
						<div class="checkout_head">
							<h3>Thông tin của tôi</h3>

						</div>

						<div class="checkout_form">

							<div class="row">

								<div class="col-xs-6 col-sm-6">
									<label>Họ*</label>
									<input type="text" class="field-text" value="{{user.firstName}}">
								</div>

								<div class="col-xs-6 col-sm-6">
									<label>Tên*</label>
									<input type="text" class="field-text" value="{{user.lastName}}">
								</div>

								<div class="col-xs-12 col-sm-12">
									<label>Tên công ty</label>
									<input type="text" class="field-text" value="{{user.companyName}}">
								</div>

								<div class="col-xs-12 col-sm-12">
									<label>Địa chỉ*</label>
									<input type="text" class="field-text" placeholder="Street Address"
										value="{{user.address}}">
								</div>



								<div class="col-xs-6 col-sm-6">
									<label>Email *</label>
									<input type="text" class="field-text" value="{{user.email}}">
								</div>

								<div class="col-xs-6 col-sm-6">
									<label>Số điện thoại*</label>
									<input type="text" class="field-text" value="{{user.phone}}">
								</div>



							</div>

						</div>
					</div>



				</div>
			</div>
		</div>
	</section>
	<!-- END / BLOG -->
